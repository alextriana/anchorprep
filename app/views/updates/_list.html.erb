
<h1>All Updates</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @updates.each do |update| %>
      <tr>
        <td><%= update.title %></td>
        <td><%= update.summary %></td>
        <td><%= update.date %></td>
        <td><%= link_to 'Read More...', update %></td>
    <% end %>
  </tbody>
</table>