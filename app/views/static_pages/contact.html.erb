<div class="container">
<div class="row">
  <div class="col-lg-6">
    <div class="well bs-component">
      <%= form_tag submit_contact_form_path, :class => "form-horizontal" do %>
      <fieldset>
        <legend>Contact Us</legend>
        <div class="form-group">
          <%= label_tag(:first_name, "First Name", :class => 'col-lg-2 control-label') %>
          <div class="col-lg-10">
            
            <%= text_field_tag :first_name, "", :placeholder => "John", :class => 'form-control'  %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag(:last_name, "Last Name", :class => 'col-lg-2 control-label') %>
          <div class="col-lg-10">
            <%= text_field_tag :last_name, "", :placeholder => "Smith", :class =>'form-control'  %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag(:email, "Email", :class => 'col-lg-2 control-label') %>
          <div class="col-lg-10">
            <%= text_field_tag :email, "", :placeholder => "jonsmith@example.com", :class =>'form-control'  %>
          </div>
        </div>
        <div class="form-group">
          <%= label_tag(:body, "Email Body", :class => 'col-lg-2 control-label') %>
          <div class="col-lg-10">
            <%= text_area_tag :body, "", :placeholder => "Text", :id => 'email-body', :class => 'form-control' %>
            
            <span class="help-block">A longer block of help text that breaks onto a new line and may extend beyond one line.</span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-2 control-label">Radios</label>
          <div class="col-lg-10">
            <div class="radio">
              <label>
                <%= radio_button_tag(:type, "Parent") %>
                I am a parent
              </label>
            </div>
            <div class="radio">
              <label>
                <%= radio_button_tag(:type, "Student") %>
                I am a student
              </label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= submit_tag "Send Email", :class => 'btn btn-primary' %>
          </div>
        </div>
      </fieldset>
    <% end %>
    <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div></div>
  </div>
  <div class="col-lg-4">
      <div class="panel panel-info">
                <div class="panel-heading">
                  
                </div>
                <div class="panel-body">
                  AnchorPrep not only offers in person, one-on-one tutoring for residents local to the Manhattan Beach and Hermosa area, but also virtual counciling via Skype to students all over the country!
                </div>
              </div>
    <div id="map-canvas" class="col-lg-12" style="
    height: 400px;
    background-color: #CCC;"></div>
    <br>
  
  </div>
</div>
<script src="https://maps.googleapis.com/maps/api/js"></script>
<script>
  function initialize() {
    var mapCanvas = document.getElementById('map-canvas');
    var mapOptions = {
      center: new google.maps.LatLng(33.8889, -118.4053 ),
      zoom: 13,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    }
    var map = new google.maps.Map(mapCanvas, mapOptions);
  }
  $(document).ready(initialize)
  // initialize()
</script>
</div>
