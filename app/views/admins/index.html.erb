<div class="container">
<h1>Admin Dashboard</h1>

<h2>Events</h2>
<table>
  

  
</table>

<table class="table table-striped table-hover ">
                <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
                <tbody>
    <% @updates.each do |update| %>
      <tr>
        <td><%= update.title %></td>
        <td><%= update.summary %></td>
        <td><%= update.date %></td>
        <td><%= link_to 'Show', update %></td>
        <td><%= link_to 'Edit', edit_update_path(update) %></td>
        <td><%= link_to 'Delete', update, method: :destroy, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
              </table>
<br>
<%= link_to 'New Update', new_update_path %>

<h2>College Spotlights </h2>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><strong><%= college.name %></strong></td>
        <td><%= truncate college.summary, :length => 50  %></td>
        <td><%= link_to 'Show', college, :class => "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_college_path(college), :class => "btn btn-warning"%></td>
        <td><%= link_to 'Delete', college, method: :destroy, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New College', new_college_path %>

<h3>Interested Users</h3>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.relationship %></td>
      </tr>
    <% end %>
  </tbody>
</table>




</div>