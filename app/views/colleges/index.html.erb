                <div class="panel-heading">All Colleges</div>
                <div class="panel-body">
                  <ul>
					<% @colleges.each do |college| %>
      <li><%= link_to college.name, college_path(college.id) %></li>
      <% end%>
					</ul>
                </div>
              </div>
		
	</div>
			<div class="col-lg-9">
			<h1 style="padding: 20px 0; margin: 0">College Spotlight</h1>
			<p>We will provide regular highlights on popular colleges across the country</p>
	<div  style="padding: 10px;">
			
		<%= render 'colleges/list' %>
			
	</div>
</div>
</div>	