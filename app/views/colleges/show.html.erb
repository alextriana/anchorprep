<div class="container">
	<div class="container" style="margin-top: 20px">
		<div class="col-lg-3">
			<div class="panel panel-default">
				<div class="panel-heading">All Colleges</div>
				<div class="panel-body">
					<ul>
						
						<% @colleges.each do |college| %>
						<li><%= link_to college.name, college_path(college.id) %></li>
						<% end%>
					</ul>
				</div>
			</div>
			
		</div>
		<div class="col-lg-9 text-center">
			
			<div class="college-container">
				<h2><%= @college.name %></h2>
				<%= image_tag @college.photo.url(:preview), :class => "college-preview" %>
				<div style="float:left; margin-top: 20px; width: 55%">
					<blockquote>
						
						
						<p><%= @college.quote %></p>
						<small><cite title="Source Title"><%= @college.quote_author%></cite></small>
					</blockquote>
				<p><strong>Application Deadline: </strong><%= @college.deadline %></div>
				<div style="clear:both"></div>
				<div class="text-left">
					<p><%= simple_format @college.summary %></p>
				</div>
			</div>
		</div>
	</div>
</div>