<div class="container">
	<div class="container" style="margin-top: 20px">
		<div class="col-lg-2">
			<div class="panel panel-default">
				<div class="panel-heading">All Colleges</div>
				<div class="panel-body">
					<ul>
						
						<% @colleges.each do |college| %>
      <li><%= link_to college.name, college_path(college.id) %></li>
      <% end%>
					</ul>
				</div>
			</div>
			
		</div>
		<div class="col-lg-10 text-center">
			
			<h2>
			<%= @college.name %>
			</h2>
			<%= image_tag @college.photo.url(:main), :class => "college-feature" %>
			<p class="text-left">
				<%= @college.summary %>
			</p>
		</div>
	</div>
</div>