<div class="well bs-component">
  <%= form_for(@college, :class => "form-horizontal") do |f| %>
  <% if @college.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@college.errors.count, "error") %> prohibited this college from being saved:</h2>
    <ul>
      <% @college.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class =>'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :website %><br>
    <%= f.text_field :website, :class =>'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :facts %><br>
    <%= f.text_area :facts, :class =>'form-control', :rows => 4 %>
  </div>
  <div class="form-group">
    
    <div class="radio">
      <label>
        <input type="radio" name="optionsRadios" id="quote" value="option1" checked="">
        Include a quote
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name="optionsRadios" id="no-quote" value="option2">
        Do not include a quote
      </label>
    </div>
  </div>
  <div id="quote-info">
  <div class="form-group">
    <%= f.label :quote %><br>
    <%= f.text_field :quote, :class =>'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :quote_author %><br>
    <%= f.text_field :quote_author, :class =>'form-control' %>
  </div>
</div>
  <div class="form-group">
    <%= f.label :early_action %><br>
    <%= f.text_field :early_action, :class =>'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :early_decision %><br>
    <%= f.text_field :early_decision, :class =>'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :regular_decision %><br>
    <%= f.text_field :regular_decision, :class =>'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :other %><br>
    <%= f.text_field :other, :class =>'form-control', rows: 8 %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
  <% end %>
</div>

<script>
  $(document).ready(function(){
    $quoteInfo = $('#quote-info')
    $('#quote').on('click', function(){
      $quoteInfo.show()
    });
    $('#no-quote').on('click', function(){
      $quoteInfo.hide()
    });

  });
</script>